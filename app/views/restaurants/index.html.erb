<h1>All Restaurants</h1>
<%= link_to "Add new restaurant", new_restaurant_path, class: "btn btn-primary"%>
<ul>
  <%@restaurants.each do |restaurant| %>
<li><%=restaurant.name %>  </li>
<%= link_to "See details", restaurant, class: "btn btn-primary"%>
<%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
  <% end %>
</ul>
